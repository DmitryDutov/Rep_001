                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Column="0">
                        <ToolBarTray>
                            <ToolBar>
                                <TextBlock Width="100">
                            Отправитель:
                                </TextBlock>
                                <ComboBox Width="100"
                                          Name="cbSenderSelect"
                                          ItemsSource="{x:Static local:Senders.SendersDictionary}" Margin="0" VerticalAlignment="Bottom"
                                          >
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Key}"></TextBlock>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <Button Width="20">
                                    <Image Source="scr/icons8-плюс-64.png"></Image>
                                </Button>
                                <Button Width="20">
                                    <Image Source="scr/icons8-редактировать-64.png"></Image>
                                </Button>
                                <Button Width="20">
                                    <Image Source="scr/icons8-отмена-64.png"></Image>
                                </Button>
                            </ToolBar>
                        </ToolBarTray>

                        <ToolBarTray>
                            <ToolBar>
                                <TextBlock Width="100">
                                Сервер:
                                </TextBlock>
                                <ComboBox Width="100"
                                          Name="cbServerSelect"
                                          ItemsSource="{x:Static local:Senders.ServersDictionary}" Margin="0" VerticalAlignment="Bottom"
                                >
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Key}"></TextBlock>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <Button Width="20">
                                    <Image Source="scr/icons8-плюс-64.png"></Image>
                                </Button>
                                <Button Width="20">
                                    <Image Source="scr/icons8-редактировать-64.png"></Image>
                                </Button>
                                <Button Width="20">
                                    <Image Source="scr/icons8-отмена-64.png"></Image>
                                </Button>
                            </ToolBar>
                        </ToolBarTray>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <ToolBarTray>
                            <ToolBar>
                                <TextBlock Width="100">
                                Планировщик:
                                </TextBlock>
                                <Button Width="20">Q</Button>
                                <!--Будильник-->
                            </ToolBar>
                        </ToolBarTray>

                        <ToolBarTray>
                            <ToolBar>
                                <TextBlock>
                                Список адресатов:
                                </TextBlock>

                                <Button Width="20">|</Button>
                                <!--| в круге-->
                                <Button Width="20">v</Button>
                                <!--Галочка -->
                                <Button Width="20">0</Button>
                                <!--Пустой кружок-->
                            </ToolBar>
                        </ToolBarTray>
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                              Grid.ColumnSpan="2"
                              Height="300"
                              ItemsSource="{x:Static local:DataBase.Emails}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Id}"/>
                            <DataGridTextColumn Header="Почта" Binding="{Binding Email}"/>
                            <DataGridTextColumn Header="Имя отправителя" Binding="{Binding Name}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Planer"
                     >
                <ScrollViewer Height="300"
                              HorizontalAlignment="Stretch">
                    <DockPanel>
                        <Calendar HorizontalAlignment="Left"
                                  x:Name="PlanerCalendar"
                                  >

                        </Calendar>

                        <RichTextBox VerticalAlignment="Stretch" 
                                     Grid.ColumnSpan="2"
                                     MinHeight="110">

                        </RichTextBox>

                    </DockPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Message editor"
                     >
                <RichTextBox Height="400"
                             >

                </RichTextBox>
            </TabItem>

            <TabItem Header="OLD">
                <ScrollViewer  Height="300">
                    <StackPanel Orientation="Vertical" 
                               VerticalAlignment="Stretch" 
                               Grid.ColumnSpan="2">
                        <Label>Логин</Label>
                        <TextBox x:Name="LoginBox"></TextBox>

                        <Label>Пароль</Label>
                        <PasswordBox x:Name="PasswordBox"></PasswordBox>

                        <Label>Тема письма</Label>
                        <TextBox x:Name="SubjectMail"></TextBox>

                        <Label>Текст сообщения</Label>

                        <RichTextBox x:Name="BodyMail" 
                                    VerticalAlignment="Stretch" 
                                    Grid.ColumnSpan="2"
                                    MinHeight="110">

                        </RichTextBox>

                        <Button x:Name="BtnSendMail" Height="40" Click="Button_Click" Grid.ColumnSpan="2">Отправка</Button>
                    </StackPanel>

                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>